<div class="alert alert-success <%= 'd-none' unless notice %>" role="alert"><%= notice %></div>
<h1>Articles</h1>
<div id="articles">
  <% @articles.each do |article| %>
    <div class="card p-4 mb-2 shadow">
      <%= render article %>
      <%= link_to "View", article %>
    </div>
  <% end %>
</div>
